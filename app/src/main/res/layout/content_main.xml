<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="command.fedex.myapplication.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="#42a5f5">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Treadmill, Inc"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:src="@drawable/graph"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Heart Rate"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:id="@+id/textView2"
        android:layout_below="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignStart="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Calories"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:id="@+id/textView6"
        android:layout_below="@+id/linegraph"
        android:layout_alignEnd="@+id/linegraph"
        android:layout_alignStart="@+id/linegraph" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignTop="@+id/imageView"
        android:src="@drawable/heart"
        android:layout_margin="30dp"
        android:alpha="0.6" />

    <NumberPicker
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/numberPicker"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="160dp"
        android:orientation="horizontal"
        android:background="#ffffff" />

    <NumberPicker
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/numberPicker2"
        android:layout_alignParentEnd="true"
        android:background="#ffffff"
        android:layout_marginBottom="160dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Speed"
        android:id="@+id/textView3"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:layout_alignStart="@+id/numberPicker"
        android:layout_alignEnd="@+id/numberPicker"
        android:layout_below="@+id/numberPicker"
        android:layout_marginTop="-150dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Incination"
        android:id="@+id/textView4"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:layout_alignStart="@+id/numberPicker2"
        android:layout_alignEnd="@+id/numberPicker2"
        android:layout_below="@+id/numberPicker2"
        android:layout_marginTop="-150dp" />

    <com.echo.holographlibrary.LineGraph
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:id="@+id/linegraph"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        app:lineStrokeColor="@color/colorAccent"
        app:lineAxisColor="@color/colorPrimary"
        app:lineStrokeWidth="1dip"
        app:lineStrokeSpacing="10dip"
        app:lineUseDip="true"/>

</RelativeLayout>
